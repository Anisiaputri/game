<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/kuispu"
    tools:context=".TebakHurufActivity">

    <ImageButton
        android:layout_width="50dp"
        android:layout_height="55dp"
        android:background="@drawable/chevronleft"
        android:id="@+id/btn_left"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:onClick="kembali"/>
    
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SKOR :"
        android:textSize="33sp"
        android:textColor="#000"
        android:id="@+id/skor"
        android:layout_centerHorizontal="true"/>

    <ImageButton
        android:layout_width="180dp"
        android:layout_height="150dp"
        android:layout_marginLeft="270dp"
        android:layout_marginTop="75dp"
        android:background="@drawable/pop_ca"
        android:id="@+id/soal"/>

    <ImageButton
        android:layout_width="95dp"
        android:layout_height="50dp"
        android:layout_marginLeft="320dp"
        android:id="@+id/jawaban1"
        android:background="@drawable/ha"
        android:layout_marginTop="260dp"/>

    <ImageButton
        android:layout_width="95dp"
        android:layout_height="50dp"
        android:layout_marginLeft="190dp"
        android:id="@+id/jawaban2"
        android:background="@drawable/ka"
        android:layout_marginTop="260dp"/>

    <ImageButton
        android:layout_width="95dp"
        android:layout_height="50dp"
        android:layout_marginLeft="450dp"
        android:id="@+id/jawaban3"
        android:background="@drawable/ca"
        android:layout_marginTop="260dp"/>

</RelativeLayout>