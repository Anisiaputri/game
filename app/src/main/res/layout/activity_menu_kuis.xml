<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/menu"
    tools:context=".MenuKuisActivity">

    <ImageButton
        android:layout_width="50dp"
        android:layout_height="55dp"
        android:background="@drawable/chevronleft"
        android:id="@+id/btn_left"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:onClick="kembali"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="KUIS"
        android:textColor="#000"
        android:textSize="45dp"
        android:layout_marginLeft="55dp"
        android:layout_marginTop="5dp"/>

    <Button
        android:layout_width="150dp"
        android:layout_height="70dp"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="32dp"
        android:text="TEBAK HURUF"
        android:textSize="25dp"
        android:onClick="tbkhuruf"
        android:id="@+id/btn_tbkhuruf"
        android:background="@drawable/shape"/>

    <Button
        android:layout_width="150dp"
        android:layout_height="70dp"
        android:layout_marginRight="30dp"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:background="@drawable/shape"
        android:text="TEBAK KATA"
        android:onClick="tbkkata"
        android:textSize="26dp"
        android:id="@+id/btn_tbkkata"/>

</RelativeLayout>